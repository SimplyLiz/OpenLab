# BioLab environment configuration
# Copy to .env and fill in your values

# Database (default: SQLite)
DATABASE_URL=sqlite:///biolab.db
# For PostgreSQL: DATABASE_URL=postgresql://user:pass@localhost:5432/biolab

# NCBI (optional â€” gives 10 req/s instead of 3)
NCBI_API_KEY=

# LLM providers
LLM_PROVIDER=anthropic
LLM_MODEL=claude-sonnet-4-5-20250929
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
OLLAMA_URL=http://localhost:11434
MAX_SYNTHESIS_GENES=10

# Simulation
SIM_DURATION=72000

# ETL (optional)
BRENDA_EMAIL=
BRENDA_PASSWORD=
ETL_CACHE_DIR=data/etl_cache
ENABLE_ESM2=false

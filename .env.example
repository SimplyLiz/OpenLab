# OpenLab environment configuration
# Copy to .env and fill in your values

# Database (default: SQLite)
DATABASE_URL=sqlite:///openlab.db
# For PostgreSQL: DATABASE_URL=postgresql://user:pass@localhost:5432/openlab

# NCBI (optional — gives 10 req/s instead of 3)
NCBI_API_KEY=

# LLM providers
LLM_PROVIDER=anthropic
LLM_MODEL=claude-sonnet-4-5-20250929
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
OLLAMA_URL=http://localhost:11434
MAX_SYNTHESIS_GENES=10

# Cancer evidence sources (optional — some require registration)
ONCOKB_TOKEN=
COSMIC_TOKEN=

# Agent configuration
AGENT_TIMEOUT_SECONDS=600
AGENT_MAX_TOOL_CALLS=50

# Simulation
SIM_DURATION=72000

# ETL (optional)
BRENDA_EMAIL=
BRENDA_PASSWORD=
ETL_CACHE_DIR=data/etl_cache
ENABLE_ESM2=false
